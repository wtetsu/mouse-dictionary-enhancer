{
  "name": "Mouse Dictionary iframe Support",
  "manifest_version": 3,
  "version": "",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "author": "wtetsu",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "match_about_blank": true,
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Mouse Dictionary iframe Support"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
