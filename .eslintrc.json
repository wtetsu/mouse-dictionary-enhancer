{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "globals": {
    "chrome": true,
    "browser": true,
    "Promise": true,
    "BROWSER": true,
    "process": true,
    "Set": true,
    "MD_EXTENSION_ID": true,
    "TARGET_SITE_PATTERN": true,
    "Uint8Array": true
  },
  "rules": {
    "no-console": 0,
    "max-len": [2, { "code": 150, "tabWidth": 2, "ignoreUrls": true }],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "eqeqeq": 2
  }
}
